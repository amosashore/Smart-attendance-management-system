# Smart Attendance System Configuration
# Copy this file to .env and update with your settings

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=  # Generate using bcrypt

# Face Recognition
FACE_TOLERANCE=0.6
FACE_MODEL=hog
MIN_FACE_SIZE=50
FACE_QUALITY_THRESHOLD=30.0

# Audio
ENABLE_AUDIO=true
SPEECH_RATE=150
AUDIO_VOLUME=0.7

# Attendance
LATE_THRESHOLD_HOUR=9
LATE_THRESHOLD_MINUTE=0
ALLOW_MULTIPLE_CHECKIN=false

# Camera
CAMERA_INDEX=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# Logging
LOG_LEVEL=INFO
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Session
SESSION_TIMEOUT_MINUTES=30

# Export
DEFAULT_EXPORT_FORMAT=xlsx

# Performance
ENABLE_CACHE=true
CACHE_TTL_SECONDS=300
